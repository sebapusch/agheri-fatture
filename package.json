{
  "name": "agheri-fatture",
  "version": "1.1.3",
  "description": "A simple Electron application to generate invoices",
  "main": "build/main/main.js",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "node scripts/build.js && electron-builder",
    "build:win": "node scripts/build.js && electron-builder --win",
    "build:mac": "node scripts/build.js && electron-builder --mac",
    "build:linux": "node scripts/build.js && electron-builder --linux"
  },
  "repository": "https://github.com/sebapusch/agheri-fatture/",
  "author": {
    "name": "sebapusch",
    "url": "https://github.com/sebapush"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/cli": "^5.0.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "electron-packager": "^16.0.0",
    "typescript": "^4.8.2",
    "vite": "^3.0.9"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.1",
    "docx": "^7.5.0",
    "ejs": "^3.1.8",
    "electron-json-config": "^2.0.0",
    "handlebars": "^4.7.7",
    "inline-css": "^4.0.1",
    "puppeteer": "^19.6.2",
    "request": "^2.88.2",
    "sass": "^1.55.0",
    "sass-loader": "^13.0.2",
    "sequelize": "^6.29.3",
    "sqlite3": "^5.1.6",
    "vue": "^3.2.36",
    "vue-multiselect": "^3.0.0-alpha.2",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "build": {
    "appId": "com.electron.app",
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Fatture"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "snap"
      ]
    },
    "files": [
      "build/main/**/*",
      {
        "from": "build/renderer",
        "to": "renderer",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/main/static",
        "to": "static",
        "filter": [
          "**/*"
        ]
      },
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!src",
      "!config",
      "!README.md",
      "!scripts",
      "!build/renderer",
      "!dist"
    ],
    "extraResources": [
      "./resources/**"
    ]
  }
}
